FROM python:3.12-slim

WORKDIR /app

# Copy requirements and install dependencies
COPY requirements-proxy.txt .
RUN pip install --no-cache-dir -r requirements-proxy.txt

# Create non-root user with different GID to avoid conflicts
RUN groupadd -g 1000 proxyapp && \
    useradd -u 1000 -g 1000 -m -s /bin/bash proxyapp

# Copy proxy application
COPY proxy.py .

# Set ownership of application files
RUN chown proxyapp:proxyapp /app/proxy.py

# Switch to non-root user
USER proxyapp

# Expose proxy port
EXPOSE 8000

# Health check
HEALTHCHECK --interval=30s --timeout=5s --start-period=10s --retries=3 \
  CMD python -c "import urllib.request; urllib.request.urlopen('http://localhost:8000/health')" || exit 1

# Run the proxy
CMD ["uvicorn", "proxy:app", "--host", "0.0.0.0", "--port", "8000"]
